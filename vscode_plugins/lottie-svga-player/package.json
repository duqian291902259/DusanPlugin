{
  "name": "lottie-svga-player",
  "displayName": "lottie-svga-player",
  "description": "lottie and svga previewer,drog .svga to vscode to play or preview lottie json by right menus",
  "version": "1.0.3",
	"author": "duqian",
	"publisher": "duqian3201",
  "keywords": [
    "Lottie Player","SVGA Player","duqian","杜小菜"
  ],
  "engines": {
    "vscode": "^1.75.0"
  },
  "repository": {
		"type": "git",
		"url": "https://github.com/duqian291902259/DusanPlugin"
	},
	"icon": "media/logo.png",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:duqian.helloflat",
    "onCustomEditor:svga.preview",
    "onLanguage:json"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "duqian.helloflat",
        "title": "Hello Flat",
        "category": "Flat"
      },
      {
        "command": "duqian.lottie",
        "title": "preview lottie",
        "category": "Flat"
      },
      {
        "command": "duqian.svga",
        "title": "preview svga",
        "category": "Flat"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "duqian.lottie",
          "group": "1_modification",
          "when":"resourceExtname == .json"
        },
        {
          "command": "duqian.svga",
          "group": "1_modification",
          "when":"resourceExtname == .svga"
        }
      ]
    },
    "customEditors": [
			{
				"viewType": "svga.preview",
				"displayName": "svga preview",
				"selector": [
					{
						"filenamePattern": "*.svga"
					}
				]
			}
		]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@types/glob": "^8.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "eslint": "^8.33.0",
    "glob": "^8.1.0",
    "mocha": "^10.1.0",
    "typescript": "^4.9.4",
    "ts-loader": "^9.4.2",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "js-base64":"^3.7.5",
    "@vscode/test-electron": "^2.2.2"
  }
}